{
  "name": "react-clickcopy",
  "description": "Click text to copy it to the system clipboard",
  "version": "0.0.2",
  "author": "Anton Niklasson",
  "main": "dist/index.js",
  "license": "MIT",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "lint": "eslint . --ignore-path .gitignore",
    "test": "jest",
    "tdd": "jest --watchAll",
    "build": "rollup -c",
    "prepublish": "npm run build"
  },
  "jest": {
    "setupFiles": [
      "./jestSetup.js"
    ],
    "verbose": true,
    "transform": {
      "^.+\\.js$": "babel-jest"
